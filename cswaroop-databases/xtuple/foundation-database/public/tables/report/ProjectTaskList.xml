 <querysource>
  <name>detail</name>
  <sql>SELECT prjtask_number, prjtask_name, prjtask_descrip,
       CASE WHEN (prjtask_status='P') THEN 'Planning'
	  WHEN (prjtask_status='O') THEN 'In-Process'
	  ELSE 'Completed' END as status,
       formatDate(prjtask_start_date) as f_start,
       formatDate(prjtask_due_date) as f_due,
       formatDate(prjtask_assigned_date) as f_assigned,
       formatDate(prjtask_completed_date) as f_completed
  FROM prjtask
 WHERE (prjtask_prj_id=&lt;?value("prj_id")?>)
 ORDER BY prjtask_number;</sql>
 </querysource>

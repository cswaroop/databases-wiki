<? elseif exists("vohead_id") ?>
  SELECT head.*, linetax.*, adjtax.* 
  FROM
  (SELECT 
      vohead_number AS number, vohead_taxzone_id AS taxzone_id, 
      vohead_curr_id AS curr_id, vohead_curr_id AS tax_curr_id, vohead_docdate AS date, 
      COALESCE(SUM(ROUND((vodist_amount), 2)), 0) AS line, 
      COALESCE(MIN(vohead_freight)+(SELECT SUM(voitem_freight) FROM voitem WHERE voitem_vohead_id=vohead_id), 0) AS freight,  
      COALESCE(ROUND(calculateTax(vohead_taxzone_id, getfreighttaxtypeid(), vohead_docdate, baseCurrId(), MIN(vohead_freight)+
                (SELECT SUM(voitem_freight) FROM voitem WHERE voitem_vohead_id=vohead_id)),2),0) AS freighttaxamt,
      getAdjustmentTaxTypeId() AS adjTax 
  FROM vohead 
  LEFT OUTER JOIN vodist ON (vodist_vohead_id=vohead_id)
  WHERE (vodist_vohead_id=<? value("vohead_id") ?>) 
  AND (vodist_tax_id = -1)
  GROUP BY vohead_id, number, taxzone_id, curr_id, tax_curr_id, date, vohead_freight, adjTax) head, 

  (SELECT SUM(taxhist_tax * -1) AS total_tax  
   FROM (SELECT SUM(taxhist_tax) AS taxhist_tax FROM voitemtax 
         LEFT OUTER JOIN voitem ON (taxhist_parent_id = voitem_id) 
         WHERE (voitem_vohead_id=<? value("vohead_id") ?>)
          AND taxhist_taxtype_id <> getfreighttaxtypeid()
         UNION SELECT SUM(taxhist_tax) FROM voheadtax
         WHERE taxhist_parent_id=<? value("vohead_id") ?>
          AND taxhist_taxtype_id <> getfreighttaxtypeid()) foo) linetax,

  (SELECT  SUM(taxhist_tax * -1) AS adjtaxamt 
   FROM vohead 
    LEFT OUTER JOIN voheadtax ON (taxhist_parent_id = vohead_id 
                                AND taxhist_taxtype_id = getadjustmenttaxtypeid())
   WHERE vohead_id=<? value("vohead_id") ?>) adjtax
<? elseif exists("voitem_id") ?>
  SELECT head.*, linetax.* 
  FROM  
  (SELECT 
      vohead_number AS number, vohead_taxzone_id AS taxzone_id, 
      vohead_curr_id AS curr_id, vohead_curr_id AS tax_curr_id, vohead_docdate AS date, 
      COALESCE(ROUND(voitem_qty * poitem_unitprice, 2), 0) AS line, 
      COALESCE(voitem_freight, 0) AS freight,  
      COALESCE(ROUND(SUM(calculateTax(vohead_taxzone_id, getfreighttaxtypeid(), vohead_docdate, baseCurrId(), voitem_freight)),2),0) AS freighttaxamt,
      getAdjustmentTaxTypeId() AS adjTax 
  FROM voitem 
      LEFT OUTER JOIN poitem ON (voitem_poitem_id=poitem_id) 
      LEFT OUTER JOIN vohead ON (voitem_vohead_id=vohead_id) 
  WHERE (voitem_id=<? value("voitem_id") ?>) 
  GROUP BY number, taxzone_id, curr_id, tax_curr_id, date, line, freight, adjTax) head, 
  (SELECT SUM(voitemtax.taxhist_tax * -1) AS total_tax 
   FROM voitemtax 
    LEFT OUTER JOIN voitem ON (taxhist_parent_id = voitem_id) 
   WHERE (voitem_id=<? value("voitem_id") ?>)
   AND taxhist_taxtype_id <> getfreighttaxtypeid()) linetax
<? endif ?>;
